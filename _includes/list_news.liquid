{% if include.limit %}
  {% assign posts = site.posts | slice: 0, include.limit %}
{% else %}
  {% assign posts = site.posts %}
{% endif %}
<div class="news_list">
  {% for post in posts %}
    <div class="news_item">
      <div class="news_date">
        {{ post.date | date_to_string }}
      </div>
      <div class="news_link">
        <a href="{{ post.url }}">{{ post.title }}</a>
      </div>
    </div>
  {% endfor %}
</div>
