{% if include.limit %}
  {% assign posts = site.posts | slice: 0, include.limit %}
{% else %}
  {% assign posts = site.posts %}
{% endif %}
<table class="posts_list">
  {% for post in posts %}
    <tr>
      <td class="post_date">
        {{ post.date | date_to_string }}
      </td>
      <td class="post_link">
        <a href="{{ post.url }}">{{ post.title }}</a>
      </td>
    </tr>
  {% endfor %}
</table>
